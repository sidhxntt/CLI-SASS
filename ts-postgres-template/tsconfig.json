{
  "compilerOptions": {
    "target": "ES6",                     // Output code as ES6
    "module": "ES6",                     // Use ES6 modules
    "moduleResolution": "node",           // Use Node-style module resolution
    "outDir": "./dist",                  // Output directory for compiled files
    "rootDir": "./src",                  // Root directory for the source files
    "strict": true,                      // Enable strict type-checking
    "esModuleInterop": true,             // Enable compatibility for ES Modules
    "resolveJsonModule": true,           // Allows importing .json files
    "forceConsistentCasingInFileNames": true,  // Enforces consistent file naming
    "lib": ["ES6", "DOM"],               // Specifies the libraries to include
    "skipLibCheck": true,                // Skips type checking of declaration files
    "declaration": true,                 // Generates corresponding '.d.ts' files
    "sourceMap": true                    // Generates source maps for debugging
  },
  "include": ["src/**/*"],               // Includes all files in the 'src' folder
  "exclude": ["node_modules"]            // Excludes 'node_modules' folder
}
